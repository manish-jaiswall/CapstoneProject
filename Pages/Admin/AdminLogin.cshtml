@page
@model CapstoneProject.Pages.Admin.AdminLoginModel
@{}
    @if (Model.success_msg.Length > 0)
{
    Response.Redirect("/Student/StudentDetails");
    <div>
            <div class="row-cols-1">
                <div class="alert alert-success alert-dismissible">
                    @Model.success_msg
                    
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }
    @if (Model.error_msg.Length > 0)
    {
    
    <div>
            <div class="row-cols-1">
                <div class="alert alert-danger alert-dismissible">
                    @Model.error_msg
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }


<header class="head navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
    <h1 class="text-center text-primary">ADMIN LOGIN PAGE</h1>
</header>
