@page
@model CapstoneProject.Pages.Admin.EditStudentModel
@{
}

@if (Model.success_msg.Length > 0)
{
    
    <div>
        <div class="row-cols-1">
            <div class="alert alert-success alert-dismissible">
                @Model.success_msg

                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    </div>
}
@if (Model.error_msg.Length > 0)
{

    <div>
        <div class="row-cols-1">
            <div class="alert alert-danger alert-dismissible">
                @Model.error_msg
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    </div>
}
<style>
    body {
        background-size: 1500px;
        background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRx5gLiBM15QeymVhIyPdQ7aAzuhJa4rc-T8Q&usqp=CAU);
    }
</style>
<form method="post">
    <div class="row row-cols-1">
        <label class="col-form-label">Student ID</label>
        <div>
            <input type="number" class="form-control" name="Student_ID" value="@Model.update.student_id" readonly></input>
        </div>

        <label class="col-form-label">Student Name</label>
        <div>
            <input type="text" class="form-control" name="Student_Name" value="@Model.update.student_name " ></input>
        </div>

        <label class="col-form-label">Student Email</label>
        <div>
            <input type="email" class="form-control" name="Student_Email" value="@Model.update.student_email" ></input>
        </div>

        <label class="col-form-label">Student Department</label>
        <div>
            <input type="text" class="form-control" name="Student_Department" value="@Model.update.student_department" ></input>
        </div>
        <label class="col-form-label">Student Password</label>
        <div>
            <input type="password" class="form-control" name="Student_Password" value="@Model.update.student_password" readonly></input>
        </div>
        <label class="col-form-label">Course ID</label>
      
        <div>
            <input type="number" class="form-control" name="Student_Courseid" value="@Model.update.course_id" ></input>
        </div>
        <br>
        <br>
        <br>
        <div>
            <button class="btn btn-success">SUBMIT</button>
            <a href="/Student/StudentDetails" type="reset" class="btn btn-danger">Cancel</a>
        </div>

    </div>
</form>